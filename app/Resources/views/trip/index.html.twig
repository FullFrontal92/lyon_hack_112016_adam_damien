{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trips list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Cost</th>
                <th>Duration</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trip in trips %}
            <tr>
                <td><a href="{{ path('trip_show', { 'id': trip.id }) }}">{{ trip.id }}</a></td>
                <td>{{ trip.cost }}</td>
                <td>{{ trip.duration }}</td>
                <td>{{ trip.slug }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('trip_show', { 'id': trip.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('trip_edit', { 'id': trip.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trip_new') }}">Create a new trip</a>
        </li>
    </ul>
{% endblock %}
