{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trip</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ trip.cost }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ trip.duration }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ trip.slug }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trip_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trip_edit', { 'id': trip.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
